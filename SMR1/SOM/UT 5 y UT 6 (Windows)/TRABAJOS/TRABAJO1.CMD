@ECHO OFF
:INICIO
TITLE COMPARAR NUMEROS
CLS
setlocal enableextensions
SET /P NUM1=ESCRIBE UN NUMERO 
SET /P NUM2=ESCRIBE UN NUMERO 
SET /P NUM3=ESCRIBE UN NUMERO 

:OPC
IF %NUM1% GTR %NUM2% GOTO	:OPC1
IF %NUM1% LSS %NUM2% GOTO	:OPC2
IF %NUM1% LSS %NUM3% GOTO	:OPC3 


:OPC1
IF %NUM1% GTR %NUM3% GOTO	:MAYOR1

:OPC2
IF %NUM2% GTR %NUM3% GOTO	:MAYOR2

:OPC3
IF %NUM3% GTR %NUM2% GOTO	:MAYOR3

:CF1
IF %NUM3% GTR %NUM1% GOTO	:MENOR1

:CF2
IF %NUM2% GTR %NUM3% GOTO	:MENOR3

:CF3
IF %NUM1% GTR %NUM2% GOTO	:MENOR2

 
:MENOR1
echo off
ECHO.
SET MENOR=%NUM1%
ECHO EL NUMERO MENOR ES %NUM1%
SET POS_MENOR=1
ECHO POSICION MENOR ES %POS_MENOR%
GOTO	:FIN

:MAYOR1
echo off
ECHO.
SET MAYOR=%NUM1%
ECHO EL NUMERO MAYOR ES %NUM1%
SET POS_MAYOR=1
ECHO POSICION MAYOR ES %POS_MAYOR%
GOTO	:CF2

:MENOR2
ECHO.
SET MENOR=%NUM2%
ECHO EL NUMERO MENOR ES %NUM2%
SET POS_MENOR=2
ECHO POSICION MENOR ES %POS_MENOR%
GOTO	:FIN

:MAYOR2
ECHO.
SET =%NUM2%
ECHO EL NUMERO MAYOR ES %NUM2%
SET POS_MAYOR=2
ECHO POSICION MAYOR ES %POS_MAYOR%
GOTO	:CF1

:MENOR3
ECHO.
SET MENOR=%NUM3%
ECHO EL NUMERO MENOR ES %NUM3%
SET POS_MENOR=3
ECHO POSICION MENOR ES %POS_MENOR%
GOTO	:FIN

:MAYOR3
ECHO.
@SET MAYOR=%NUM3%
ECHO EL NUMERO MAYOR ES %NUM3%
SET POS_MAYOR=3
ECHO POSICION MAYOR ES %POS_MAYOR%
GOTO	:CF3

:ERROR
ECHO ESCRIBE UN NUMERO PORFAVOR
GOTO	:INICIO

:FIN
ECHO.
CHOICE /CS /M "QUIERES COMPARAR OTRO NUMERO?"

IF ERRORLEVEL 2	GOTO	:SALIDA
IF ERRORLEVEL 1	GOTO	:INICIO


:SALIDA
EXIT

ENDLOCAL